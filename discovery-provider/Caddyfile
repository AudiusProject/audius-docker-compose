{$audius_discprov_url}

{$CADDY_TLS}

encode zstd gzip

@blockscout_proxy {
    path / /_next* /node-api* /apps* /account* /accounts* /static* /auth/profile* /auth/unverified-email* /txs* /tx* /blocks* /block* /login* /address* /stats* /search-results* /token* /tokens* /visualize* /api-docs* /csv-export* /verified-contracts* /graphiql* /withdrawals* /l2-output-roots* /l2-txn-batches* /l2-withdrawals* /l2-deposits*
}

route @blockscout_proxy {
    reverse_proxy acdc-blockscout-frontend:3000
}

reverse_proxy acdc-blockscout-backend:4000
